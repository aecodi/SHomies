<Window x:Class="SHomies.Tienda.Usuario.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Titulo" 
        Height="228" 
        Width="394" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="{x:Null}" Icon="/SHomies.Tienda;component/Images/login.ico" Loaded="Window_Loaded">
  <Border BorderBrush="Silver" Background="White" BorderThickness="1" Height="188" HorizontalAlignment="Left" Name="border4" VerticalAlignment="Top" Width="371" CornerRadius="25,0,0,0" >
    <Grid Width="354" Height="175">
      <Border BorderBrush="Silver" BorderThickness="1" Height="165" HorizontalAlignment="Left" Margin="6,0,0,6" Name="brdProducto" VerticalAlignment="Bottom" Width="344" CornerRadius="10,0,0,0">
        <Grid Height="157" Name="grid2" Width="337">
          <Border BorderBrush="Black" BorderThickness="1.5,0,1.5,0" CornerRadius="0,20,0,20" Height="149" HorizontalAlignment="Left" Margin="6,6,0,0" Name="border3" VerticalAlignment="Top" Width="326">
            <Grid Height="138" Name="grid3" Width="317">
              <TextBlock FontFamily="Arial" FontSize="12" FontWeight="Bold" Foreground="Black" Height="13" HorizontalAlignment="Center" Margin="40,48,232,77" Name="textBlock1" Text="Usuario" VerticalAlignment="Center" Width="Auto" TextAlignment="Right" />
              <TextBlock FontFamily="Arial" FontSize="12" FontWeight="Bold" Foreground="Black" Height="13" HorizontalAlignment="Center" Margin="46,75,232,50" Name="textBlock3" Text="Clave" VerticalAlignment="Center" Width="39"  TextAlignment="Right"/>
              <TextBox Height="23" HorizontalAlignment="Left" Margin="99,43,0,0" Name="txtUsuario" VerticalAlignment="Top" Width="181" Tag="1" />
              <TextBlock FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="#FF042271" Height="18" HorizontalAlignment="Center" Margin="6,6,51,114" Name="txbTituloDelFormulario" Text="Identificación de Usuario" TextAlignment="Center" VerticalAlignment="Center" Width="260" />
              <PasswordBox Height="23" HorizontalAlignment="Left" Margin="98,71,0,0" Name="pasClave" VerticalAlignment="Top" Width="182" Tag="2" />
              <Button Content="Aceptar" Height="23" HorizontalAlignment="Left" Margin="205,100,0,0" Name="btnAceptar" VerticalAlignment="Top" Width="75" FontWeight="Bold" Click="btnAceptar_Click" />
              <Button Background="#FFC8C8C8" BorderBrush="#FF585858" Command="{Binding CancelCommand}" Cursor="Hand" Height="25" HorizontalAlignment="Right" Margin="0,6,6,107" Name="btnCerrar" Style="{DynamicResource CloseButtonStyle}" VerticalAlignment="Center" Visibility="{Binding CancelButtonVisibility}" Width="25" Click="btnCerrar_Click" />
            </Grid>
          </Border>
        </Grid>
      </Border>
      <TextBlock FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="#FF042271" Height="17" HorizontalAlignment="Center" Margin="85,8,113,482" Name="textBlock2" Text="titulo" TextAlignment="Center" VerticalAlignment="Center" Width="273" />
    </Grid>
  </Border>
</Window>    
