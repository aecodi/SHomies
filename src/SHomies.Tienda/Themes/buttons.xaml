    <ControlTemplate x:Key="StyleButtonAnular" TargetType="Button">
        <Grid>
            <Image Height="24" HorizontalAlignment="Left" Stretch="Fill" VerticalAlignment="Top" Width="24" Source="../Images/Buttons/limpiar.png" Margin="5,0,0,0" />
            <TextBlock Height="23" Margin="0,23,1,0" Text="Anular" FontFamily="Calibri"  FontSize="12" FontWeight="Bold" VerticalAlignment="Top" Foreground="#FF5F5F5F" />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#FF4788c8" />
                <Setter Property="Foreground" Value="#FF4788c8" />
                <Setter Property="Cursor" Value="Hand" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="#FF8C2F2F" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
